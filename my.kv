<CreateAccountWindow>
    name: "create"

    namee: namee
    email: email
    password: passw

    FloatLayout: #before was witin <>
        cols: 1

        FloatLayout:
            size: root.width, root.height/2 #play about

            Label:
                text: "Create an Account"
                size_hint: 0.8, 0.2
                pos_hint: {"x":0.1, "top":1}
                font_size: (root.width**2 + root.height**2) / 14**4 #don't understand **'s

            Label:
                size_hint: 0.5, 0.12
                pos_hint: {"x":0, "top":0.8}
                text:"Name: "
                font_size: (root.width**2 + root.height**2) / 14**4 #don't understand **'s

            TextInput:
                pos_hint: {"x":0.5, "top":0.8}
                size_hint: 0.4, 0.12
                id: namee
                multiname: False
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5, 0.12
                pos_hint: {"x":0, "top":0.8-0.13}
                text:"Name: "
                font_size: (root.width**2 + root.height**2) / 14**4 #don't understand **'s

            TextInput:
                pos_hint: {"x":0.5, "top":0.8-0.13}
                size_hint: 0.4, 0.12
                id: email
                multiname: False
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5, 0.12
                pos_hint: {"x":0, "top":0.8-0.13*2}
                text:"Password: "
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8-0.13*2}
                size_hint: 0.4, 0.12
                id: passw
                multiname: False
                font_size: (root.width**2 + root.height**2) / 14**4

        Button:
            pos_hint: {"x":0.3,"y":0.05}
            size_hint: 0.4, 0.1
            font_size: (root.width**2 + root.height**2) /14**4
            text: "Already have an account?"
            on release:
                root.manager.transition.direction = "left"
                root.login()

        Button:
            pos_hint: {"x":0.2,"y":0.05}
            size_hint: 0.6, 0.15
            text: "Submit"
            font_size: (root.width**2 + root.height**2) /14**4
            on release:
                root.manager.transition.direction = "left"
                root.submit()

<LoginWindow>
    name: "login"

    email: email
    password: password

    FloatLayout:

        Label:
            text: "Email"
            size_hint: 0.35, 0.15
            pos_hint: {"x":0.1, "top":0.9}
            font_size: (root.width**2 + root.height**2) / 13**4 #don't understand **'s

        TextInput:
            pos_hint: {"x":0.5, "top":0.8}
            size_hint: 0.4, 0.15
            id: email
            multiname: False
            font_size: (root.width**2 + root.height**2) / 13**4

        Label:
            size_hint: 0.35, 0.15
            pos_hint: {"x":0.1, "top":0.7}
            text:"Password: "
            font_size: (root.width**2 + root.height**2) / 13**4 #don't understand **'s

        TextInput:
            pos_hint: {"x":0.45, "top":0.7}
            size_hint: 0.4, 0.15
            id: password
            multiname: False
            font_size: (root.width**2 + root.height**2) / 13**4

        Button:
            pos_hint: {"x":0.3,"y":0.3}
            size_hint: 0.4, 0.1
            text: "Submit"
            font_size: (root.width**2 + root.height**2) /17**4
            on release:
                root.manager.transition.direction = "right"
                root.submit()

<MainWindow>
    n:n #name but different from before
    email: email
    created: created

    FloatLayout:
        Label:
            id: n
            pos_hint: {"x":0.1, "top":0.9}
            size_hint: 0.8, 0.2
            text: "Account Name: "

        Label:
            id: email
            pos_hint: {"x":0.1, "top":0.7}
            size_hint: 0.8, 0.2
            text: "Email: "

        Label:
            id: created
            pos_hint: {"x":0.1, "top":0.5}
            size_hint: 0.8, 0.2
            text: "Created: "

        Button:
            pos_hint: {"x":0.2,"y":0.1}
            size_hint: 0.6, 0.2
            text: "Log Out"
            #font_size: (root.width**2 + root.height**2) /17**4
            on release:
                root.manager.transition.direction = "right"
                root.submit()

